#make clean
#make


echo Running on host `hostname`
echo Time is `date`
echo Directory is `pwd`
echo Slurm job ID is $SLURM_JOB_ID
echo This job runs on the following machines:
echo `echo $SLURM_JOB_NODELIST | uniq`

#! Run the executable
#./d2q9-bgk input_128x128.params obstacles_128x128.dat
#./d2q9-bgk input_128x256.params obstacles_128x256.dat
#./d2q9-bgk input_256x256.params obstacles_256x256.dat
#./d2q9-bgk input_1024x1024.params obstacles_1024x1024.dat


OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_128x128.params obstacles_128x128.dat
OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_128x128.params obstacles_128x128.dat
OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_128x128.params obstacles_128x128.dat

OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_256x256.params obstacles_256x256.dat
OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_256x256.params obstacles_256x256.dat
OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_256x256.params obstacles_256x256.dat

OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_1024x1024.params obstacles_1024x1024.dat
OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_1024x1024.params obstacles_1024x1024.dat
OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_1024x1024.params obstacles_1024x1024.dat

python3 collate.py

OMP_NUM_THREADS=28 OMP_PROC_BIND=true OMP_PLACES=cores ./openmp input_128x128.params obstacles_128x128.dat


make check
